<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TheRiceCompany" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.TheRiceCompany" parent="Base.Theme.TheRiceCompany" />

    <style name="BottomNavTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">16sp</item> <!-- Adjust the text size here -->
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    <!-- Custom outlined button style -->
    <style name="OutlinedButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/green</item>
        <item name="strokeColor">@color/green</item>

        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textAllCaps">false</item>
        <item name="tint">@color/green</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="textview" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/otp_header_color</item>


    </style>


    <style name="radiobutton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/filter_color_selector</item>


    </style>
    <style name="ThemeDialogCustom">

        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
    <style name="TextAppearance.App.Strikethrough" parent="TextAppearance.AppCompat.Small">
        <!--<item name="android:paintFlags">8448</item>-->
    </style>
    <style name="HorizontalScrollbarStyle">
        <item name="android:scrollbarSize">8dp</item> <!-- Thickness of the scrollbar -->
        <item name="android:scrollbarThumbHorizontal">@drawable/custom_scrollbar_thumb</item> <!-- Custom thumb drawable -->
        <item name="android:scrollbarTrackHorizontal">@drawable/custom_scrollbar_track</item> <!-- Custom track drawable -->
    </style>
</resources>