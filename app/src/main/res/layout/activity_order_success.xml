<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/txt_saved"
            style="@style/textview"
            android:layout_marginTop="@dimen/_20sdp"
            android:text=""
            android:textColor="#2D2D2D"
            android:textSize="@dimen/_22sdp"
            android:textStyle="bold"

            />
        <ImageView
            android:id="@+id/successAnimation"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_160sdp"
            android:src="@drawable/img_order_success"
            />

        <TextView
            android:id="@+id/tvOrderSuccess"
            style="@style/textview"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Order Placed Successful"
            android:textColor="#2D2D2D"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/tvPaymentAmount"
            style="@style/textview"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:text="Successfully paid $62"
            android:textColor="@color/gray"
            android:textSize="@dimen/_14sdp"
            />
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16sdp"
        app:contentPadding="@dimen/_16sdp"
        app:cardCornerRadius="@dimen/_22sdp"
        >
        <TextView style="@style/textview"
            android:gravity="center"
            android:textSize="@dimen/_18sdp"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:drawableTint="@color/colorPrimary"
            android:drawableRight="@drawable/ic_arrow_farward"
            android:text="@string/continue_to_shop"
            />
    </androidx.cardview.widget.CardView>

</LinearLayout>