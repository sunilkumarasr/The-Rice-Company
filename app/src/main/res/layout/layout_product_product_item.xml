<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_5sdp"

    android:layout_marginEnd="@dimen/_5sdp">
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_132sdp"
        app:cardCornerRadius="@dimen/_13sdp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/round_light_gray">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:src="@drawable/item1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_22sdp"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:minWidth="@dimen/_40sdp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@drawable/round_left_edge_only">
                <TextView
                    android:id="@+id/txt_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="30% Off"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnr_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:padding="8dp"
                android:background="@drawable/round_white">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="15sp"
                    android:layout_height="15sp"
                    android:src="@drawable/icon_star"/>
                <TextView
                    android:id="@+id/txt_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="4.0"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="vertical"
            >


        <TextView
            android:id="@+id/txt_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="Basmsati ( 1Kg: ₹54 )"
            android:textSize="@dimen/_10sdp"
            android:singleLine="true"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/product_name_color"/>
        <TextView
            android:id="@+id/txt_product_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:lines="2"
            android:text="Daawat super Basmati"
            android:textSize="@dimen/_12sdp"
            android:ellipsize="end"
            android:textColor="@color/otp_header_color"
            android:fontFamily="@font/teachers_medium"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MRP:"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/product_name_color"
                android:fontFamily="@font/poppins"/>
            <TextView
                android:id="@+id/txt_mrp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="₹64"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/otp_header_color"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Our Price:"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/product_name_color"
                android:fontFamily="@font/poppins"/>
            <TextView
                android:id="@+id/txt_our_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="₹54"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/otp_header_color"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnr_market_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Market Price:"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/product_name_color"
                android:fontFamily="@font/poppins"/>
            <TextView
                android:id="@+id/txt_market_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="₹69"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/otp_header_color"/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="@dimen/_8sdp">
                <TextView
                    android:id="@+id/txt_added_to_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="@string/added_to_cart"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/poppins_semibold"/>
                <LinearLayout
                    android:id="@+id/lnr_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_30sdp"
                    android:background="@drawable/round_edge_colorprimary">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Add"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/poppins_semibold"/>
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/quantityLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_40sdp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/quantity_background"
                        android:orientation="horizontal"
                        android:padding="@dimen/_3sdp"
                        android:layout_gravity="center"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    <ImageButton
                        android:id="@+id/btnMinus"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_minus"
                        />

                    <TextView
                        android:id="@+id/tvQuantity"
                        style="@style/textview"
                        android:minWidth="@dimen/_30sdp"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/btnPlus"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_plus"
                        />
                </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>