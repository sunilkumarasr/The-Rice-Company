            <WebView
                android:id="@+id/webview_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/txt_product_description"
                style="@style/textview"

                android:text=""
