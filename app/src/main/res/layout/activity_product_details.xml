<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lnr_bottom"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#FFFFFF"
            android:elevation="4dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/icon_left_arrow"/>

            <TextView
                style="@style/textview"
                android:layout_centerVertical="true"
                android:layout_marginStart="56dp"
                android:text="@string/product_details"

                android:textSize="@dimen/_16sdp"/>
        </RelativeLayout>
        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/image_slider"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_120sdp"
            app:iss_auto_cycle="true"
            app:iss_period="1000"
            app:iss_delay="1000"
            app:iss_selected_dot="@color/red"
            android:layout_marginBottom="@dimen/_16sdp"
            app:iss_text_align="CENTER"/>

        <!-- Rating Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_star"
                />

            <TextView
                android:id="@+id/txt_start"
                style="@style/textview"
                android:text="4.4"
                android:textColor="#000000"
                android:textSize="@dimen/_11sdp"
                android:layout_marginStart="4dp"/>

            <TextView
                android:id="@+id/txt_rating_no"
                style="@style/textview"
                android:textSize="@dimen/_11sdp"
                android:text="(10,232)"
                android:textColor="@color/gray"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Product Title -->
        <TextView
            android:id="@+id/txt_product_name"
            style="@style/textview"
            android:textSize="@dimen/_11sdp"
            android:text=""

            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Price Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    style="@style/textview"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/gray"
                    android:minWidth="@dimen/_80sdp"
                    android:text="MRP: "
                    />

                <TextView
                    android:id="@+id/txt_mrp_price"
                    style="@style/textview"
                    android:textSize="@dimen/_11sdp"
                    android:text=""
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    style="@style/textview"
                    android:textSize="@dimen/_11sdp"
                    android:text="Our Price: "
                    android:textColor="@color/gray"
                    android:minWidth="@dimen/_80sdp"
                    />

                <TextView
                    android:id="@+id/txt_our_price"
                    style="@style/textview"
                    android:textSize="@dimen/_11sdp"
                    android:text=""
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/textview"
                    android:text="Market Price: "
                    android:textColor="@color/gray"
                    android:minWidth="@dimen/_80sdp"
                    android:textSize="@dimen/_12sdp"/>

                <TextView
                    android:id="@+id/txt_market_price"
                    style="@style/textview"

                    android:text=""
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Variant Selection -->
        <TextView
            style="@style/textview"
            android:text="Select Variant"

            android:textSize="@dimen/_12sdp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/flexboxLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                app:flexDirection="row"
                app:justifyContent="space_around"
                >
            </com.google.android.flexbox.FlexboxLayout>

        </LinearLayout>

        <!-- Delivery Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginBottom="8dp">

                <TextView
                    style="@style/textview"
                    android:text="Delivery to: "
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_12sdp"/>

                <TextView
                    style="@style/textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sai Kumar, 500008"

                    android:textSize="@dimen/_12sdp"/>

                <TextView
                    style="@style/textview"
                    android:text="Home"
                    android:paddingVertical="@dimen/_2sdp"
                    android:paddingHorizontal="@dimen/_4sdp"
                    android:background="@drawable/drawable_home_text_bg"
                    android:textSize="@dimen/_10sdp"/>
            </LinearLayout>

            <TextView
                style="@style/textview"
                android:text="Ho.No. 9-1-34/30/40D, Bapunagar"
                android:textColor="@color/gray"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone"
                android:layout_marginBottom="8dp"/>
            <Button
                android:id="@+id/btnChangeAddress"
                style="@style/OutlinedButtonStyle"

                android:layout_marginTop="@dimen/_8sdp"
                android:text="Change"
                android:visibility="gone"
                android:textColor="@color/green" />
            <TextView
                android:id="@+id/txt_order_delivered"
                style="@style/textview"
                android:text="if ordered before 2:10 PM"
                android:textColor="@color/gray"
                android:textSize="@dimen/_11sdp"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/textview"
                    android:text="• Schedule Your Delivery"

                    android:textSize="@dimen/_12sdp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    style="@style/textview"
                    android:text="• Cash on Delivery"

                    android:textSize="@dimen/_12sdp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    style="@style/textview"
                    android:text="• Easy doorstep Returns"

                    android:textSize="@dimen/_12sdp"/>

                <TextView
                    android:id="@+id/txt_view_details"
                    style="@style/textview"
                    android:text="@string/view_details"
                    android:textColor="#367CFF"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:textSize="@dimen/_12sdp"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           >

            <TextView
                style="@style/textview"
                android:text="Product Details"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"

                android:layout_marginBottom="16dp"/>

