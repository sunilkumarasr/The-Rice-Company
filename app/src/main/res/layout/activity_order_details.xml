<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#FFFFFF"
            android:elevation="4dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/icon_left_arrow"/>

            <TextView
                android:id="@+id/orderIdText"
                style="@style/textview"
                android:layout_centerVertical="true"
                android:layout_marginStart="56dp"
                android:text="Order Details"

                android:textSize="@dimen/_16sdp"/>
        </RelativeLayout>

        <!-- Order Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp">
        <LinearLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <!-- Order Confirmed -->
            <LinearLayout
                android:id="@+id/lnr_order_confirmed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_order_check_success"
                    />

                <TextView
                    style="@style/textview"
                    android:layout_marginStart="16dp"
                    android:text="Order Confirmed"

                    android:textSize="@dimen/_12sdp"/>
            </LinearLayout>


            <View
                android:id="@+id/view_order_confirmed"
                android:layout_width="2dp"
                android:layout_height="24dp"
                android:layout_marginStart="11dp"
                android:background="@color/gray"/>
            <LinearLayout
                android:id="@+id/lnr_order_shipped"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_order_shiiped"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/circle_order_step" />

                <TextView
                    style="@style/textview"
                    android:layout_marginStart="16dp"
                    android:text="Order Shipped"

                    android:textSize="@dimen/_12sdp"/>
            </LinearLayout>

            <View
                android:id="@+id/view_order_shipped"
                android:layout_width="2dp"
                android:layout_height="24dp"
                android:layout_marginStart="11dp"
                android:background="@color/gray"/>
            <LinearLayout
                android:id="@+id/lnr_order_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_order_out"

                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/circle_order_step"
                    />

                <TextView
                    style="@style/textview"
                    android:layout_marginStart="16dp"
                    android:text="Order Out for Delivery"

                    android:textSize="@dimen/_12sdp"/>
            </LinearLayout>

            <View
                android:id="@+id/view_order_out_delivery"
                android:layout_width="2dp"
                android:layout_height="24dp"
                android:layout_marginStart="11dp"
                android:background="@color/gray" />
            <LinearLayout
                android:id="@+id/lnr_order_delivered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_order_delivered"

                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/circle_order_step"
                    />

                <TextView
                    style="@style/textview"
                    android:layout_marginStart="16dp"
                    android:text="Delivered"

                    android:textSize="@dimen/_12sdp"/>
            </LinearLayout>

            <View
                android:id="@+id/view_order_delivered"
                android:layout_width="2dp"
                android:layout_height="24dp"
                android:layout_marginStart="11dp"
                android:background="#FFA000"/>

            <!-- Return -->
            <LinearLayout
                android:id="@+id/lnr_order_returned"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_order_cancelled_check"
                    />

                <TextView
                    style="@style/textview"
                    android:layout_marginStart="16dp"
                    android:text="Return"

                    android:textSize="@dimen/_12sdp"/>
            </LinearLayout>

            <View
                android:id="@+id/view_order_retured"
                android:layout_width="2dp"
                android:layout_height="24dp"
                android:layout_marginStart="11dp"
                android:background="#FFA000"/>

            <!-- Refund -->
            <LinearLayout
                android:id="@+id/lnr_order_refund"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_order_return_check"
                    />

                <TextView
                    style="@style/textview"
                    android:layout_marginStart="16dp"
                    android:text="Refund"

                    android:textSize="@dimen/_12sdp"/>
            </LinearLayout>
        </LinearLayout>
        </androidx.cardview.widget.CardView>
        <!-- Shipping Details Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/textview"
                    android:text="Shipping Details"

                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/customerNameText"
                    style="@style/textview"
                    android:layout_marginTop="16dp"
                    android:text=""

                    android:textSize="@dimen/_12sdp"/>

                <TextView
                    android:id="@+id/addressText"
                    style="@style/textview"
                    android:layout_marginTop="8dp"
                    android:text=""
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_12sdp"/>

                <TextView
                    android:id="@+id/phoneText"
                    style="@style/textview"
                    android:layout_marginTop="8dp"
                    android:text=""
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_12sdp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Rate Product Section -->
        <!-- Rate Product Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:padding="16dp">

                <TextView
                    style="@style/textview"
                    android:text="Rate the Product"

                    android:textSize="@dimen/_14sdp"/>

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:numStars="5"
                    android:rating="0"
                    android:stepSize="0.5"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Bill Details Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/textview"
                    android:text="Bill Details"
                    android:textColor="#000000"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"/>

                <!-- Bill Amount -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bill Details"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12sdp"/>

                    <TextView
                        android:visibility="gone"
                        style="@style/textview"
                        android:text="Saved ₹5"
                        android:textColor="#4CAF50"
                        android:textSize="@dimen/_11sdp"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/txt_total_amount"
                        style="@style/textview"
                        android:text=""

                        android:textSize="@dimen/_12sdp"/>
                </LinearLayout>

                <!-- Delivery Charges -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Delivery Charges"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12sdp"/>

                    <TextView
                        android:id="@+id/txt_delivery_charges"
                        style="@style/textview"
                        android:text="₹0"

                        android:textSize="@dimen/_12sdp"/>
                </LinearLayout>

                <!-- Free Delivery Note -->
                <TextView
                    style="@style/textview"
                    android:layout_marginTop="4dp"
                    android:visibility="gone"
                    android:text="Shop for ₹69 more to get free delivery"
                    android:textColor="#FF4444"
                    android:textSize="@dimen/_11sdp"/>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="#E0E0E0"/>

                <!-- Grand Total -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Grand Total"

                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txt_grand_total"
                        style="@style/textview"
                        android:text=""

                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>


