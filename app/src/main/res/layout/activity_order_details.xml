<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#FFFFFF"
            android:elevation="4dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_back"/>

            <TextView
                style="@style/textview"
                android:layout_centerVertical="true"
                android:layout_marginStart="56dp"
                android:text="Order Details"

                android:textSize="@dimen/_16sdp"/>
        </RelativeLayout>

        <!-- Order Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Order ID -->
                <TextView
                    android:id="@+id/orderIdText"
                    style="@style/textview"
                    android:text="Order ID: OD123456"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_12sdp"/>

                <!-- Product Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/productImage"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/item1"
                        android:scaleType="centerCrop"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/productWeightText"
                            style="@style/textview"
                            android:text="Basmati (1 Kg)"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_12sdp"/>

                        <TextView
                            android:id="@+id/productNameText"
                            style="@style/textview"
                            android:layout_marginTop="4dp"
                            android:text="Daawat Super Basmati Rice"
                            android:textSize="@dimen/_12sdp"/>

                        <TextView
                            android:id="@+id/productDescriptionText"
                            style="@style/textview"
                            android:layout_marginTop="4dp"
                            android:text="(Fluffy Long Grains)"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_12sdp"/>

                        <TextView
                            android:id="@+id/priceText"
                            style="@style/textview"
                            android:layout_marginTop="8dp"
                            android:text="₹62"

                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Order Timeline -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="vertical">

                    <!-- Order Confirmed -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/icon_order_check_success"
                           />

                        <TextView
                            style="@style/textview"
                            android:layout_marginStart="16dp"
                            android:text="Order Confirmed, 25 Oct 2024"

                            android:textSize="@dimen/_12sdp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="11dp"
                        android:background="#4CAF50"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/icon_order_check_success"
                            />

                        <TextView
                            style="@style/textview"
                            android:layout_marginStart="16dp"
                            android:text="Delivered, 28 Oct 2024"

                            android:textSize="@dimen/_12sdp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="11dp"
                        android:background="#FFA000"/>

                    <!-- Return -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/icon_order_cancelled_check"
                           />

                        <TextView
                            style="@style/textview"
                            android:layout_marginStart="16dp"
                            android:text="Return, 29 Oct 2024"

                            android:textSize="@dimen/_12sdp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="11dp"
                        android:background="#FFA000"/>

                    <!-- Refund -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/icon_order_return_check"
                           />

                        <TextView
                            style="@style/textview"
                            android:layout_marginStart="16dp"
                            android:text="Refund, 29 Oct 2024"

                            android:textSize="@dimen/_12sdp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Shipping Details Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/textview"
                    android:text="Shipping Details"

                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/customerNameText"
                    style="@style/textview"
                    android:layout_marginTop="16dp"
                    android:text="Sai Kumar"

                    android:textSize="@dimen/_12sdp"/>

                <TextView
                    android:id="@+id/addressText"
                    style="@style/textview"
                    android:layout_marginTop="8dp"
                    android:text="Ho.No. 9-1-34/30/40D, Bapunagar,\nLonger House, Hyderabad,\nTelangana- 500008"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_12sdp"/>

                <TextView
                    android:id="@+id/phoneText"
                    style="@style/textview"
                    android:layout_marginTop="8dp"
                    android:text="Phone Number: 9123456789, 9876543210"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_12sdp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Rate Product Section -->
        <!-- Rate Product Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/textview"
                    android:text="Rate the Product"

                    android:textSize="@dimen/_14sdp"/>

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:numStars="5"
                    android:rating="0"
                    android:stepSize="0.5"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Bill Details Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/textview"
                    android:text="Bill Details"
                    android:textColor="#000000"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"/>

                <!-- Bill Amount -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bill Details"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12sdp"/>

                    <TextView
                        style="@style/textview"
                        android:text="Saved ₹5"
                        android:textColor="#4CAF50"
                        android:textSize="@dimen/_11sdp"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        style="@style/textview"
                        android:text="₹62"

                        android:textSize="@dimen/_12sdp"/>
                </LinearLayout>

                <!-- Delivery Charges -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Delivery Charges"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12sdp"/>

                    <TextView
                        style="@style/textview"
                        android:text="₹30"

                        android:textSize="@dimen/_12sdp"/>
                </LinearLayout>

                <!-- Free Delivery Note -->
                <TextView
                    style="@style/textview"
                    android:layout_marginTop="4dp"
                    android:text="Shop for ₹69 more to get free delivery"
                    android:textColor="#FF4444"
                    android:textSize="@dimen/_11sdp"/>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="#E0E0E0"/>

                <!-- Grand Total -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Grand Total"

                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"/>

                    <TextView
                        style="@style/textview"
                        android:text="₹92"

                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</ScrollView>


