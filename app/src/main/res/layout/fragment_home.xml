<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.HomeFragment">

    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:background="@drawable/home_bg_gradent"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginBottom="10dp">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgLogo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/logo_top"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/imgLogo"
                        android:layout_toLeftOf="@+id/imgNotificationContainer"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hi"
                            android:textSize="@dimen/_16sdp"
                            android:fontFamily="@font/teachers_medium"
                            android:textColor="@color/otp_header_color"/>
                        <TextView
                            android:id="@+id/txt_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:singleLine="true"
                            android:textColor="@color/otp_header_color"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/teachers_medium"/>
                    </LinearLayout>

                    <!-- Container for Notification Icon and Badge -->
                    <RelativeLayout
                        android:id="@+id/imgNotificationContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_toLeftOf="@+id/img_whatsapp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgNotification"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:tint="@color/otp_header_color"
                            android:src="@drawable/notification_ic"/>

                        <TextView
                            android:id="@+id/tvNotificationBadge"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignTop="@id/imgNotification"
                            android:layout_alignEnd="@id/imgNotification"
                            android:background="@drawable/notification_badge_background"
                            android:gravity="center"

                            android:text="0" 
                            android:textColor="@android:color/white"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            tools:text="99+"/>
                    </RelativeLayout>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_whatsapp"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/whatsapp"/>
                </RelativeLayout>

                <LinearLayout
                android:id="@+id/linearSearch"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="center_vertical"
                android:background="@drawable/round_white">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="15sp"
                    android:src="@drawable/search"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Search Product"
                    android:textColor="@color/txtHeader"
                    android:layout_marginStart="15sp"
                    android:fontFamily="@font/poppins"
                    android:textSize="18dp"/>
            </LinearLayout>

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/image_slider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_180sdp"
                    android:background="@color/white"
                    app:iss_auto_cycle="true"
                    app:iss_period="2000"
                    app:iss_delay="2000"
                    app:iss_corner_radius="8"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    app:iss_text_align="CENTER"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Top Categories"
                            android:textSize="@dimen/_17sdp"
                            android:textColor="@color/otp_header_color"
                            android:fontFamily="@font/teachers_medium"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lnr_see_categories"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="See all"
                            android:textSize="@dimen/_15sdp"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/teachers_medium"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp">

                   <androidx.recyclerview.widget.RecyclerView
                       android:id="@+id/recycler_top_catgories"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                       android:orientation="horizontal"
                       android:scrollbars="horizontal"
                       android:scrollbarStyle="insideOverlay"
                       style="@style/HorizontalScrollbarStyle"
                       tools:listitem="@layout/layout_home_top_categories"
                       />
                    
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Top Selling"
                            android:textSize="@dimen/_17sdp"
                            android:textColor="@color/otp_header_color"
                            android:fontFamily="@font/teachers_medium"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txtseealltopselling"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="See all"
                            android:textSize="@dimen/_15sdp"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/teachers_medium"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_products_top_selling"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:scrollbars="horizontal"
                        android:scrollbarStyle="insideOverlay"
                        style="@style/HorizontalScrollbarStyle"
                        tools:listitem="@layout/layout_home_product_item"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Products"
                            android:textSize="@dimen/_17sdp"
                            android:textColor="@color/otp_header_color"
                            android:fontFamily="@font/teachers_medium"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txt_see_all_products"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="See all"
                            android:textSize="@dimen/_15sdp"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/teachers_medium"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:visibility="visible"
                    android:orientation="horizontal">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_products"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:scrollbars="horizontal"
                        android:scrollbarStyle="insideOverlay"
                        style="@style/HorizontalScrollbarStyle"
                        tools:listitem="@layout/layout_home_product_item"
                        />


                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

   

</layout>