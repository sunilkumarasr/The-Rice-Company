<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" >
        <shape android:shape="rectangle" >
            <padding android:left="@dimen/_8sdp" android:right="@dimen/_8sdp"/>
            <corners android:radius="@dimen/_12sdp"
                />
            <solid android:color="@color/colorPrimary"/>
            <stroke android:color="@color/grey_font" android:width="1dp"/>
        </shape>

    </item>

    <item android:state_checked="false" >

        <shape android:shape="rectangle">
            <padding android:left="@dimen/_18sdp" android:right="@dimen/_8sdp"/>

            <corners android:radius="@dimen/_12sdp"
                />
            <solid android:color="@color/bg_color_unselect"/>
            <!--<stroke android:color="@color/colorPrimary" android:width="1dp"/>-->
        </shape>

    </item>
    <item android:state_checked="false" >
        <shape android:shape="rectangle">
            <padding android:left="@dimen/_18sdp" android:right="@dimen/_8sdp"/>

            <corners android:radius="@dimen/_12sdp"
                />
            <solid android:color="@color/bg_color_unselect"/>
            <!--<stroke android:color="@color/colorPrimary" android:width="1dp"/>-->
        </shape>

    </item>


</selector>